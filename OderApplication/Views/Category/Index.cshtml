

@model IEnumerable<OderApplication.Models.Category>

<div class="container p-3">
    <div class="row pt-3">
        <did class="col-6">
            <h2 class="text-primary">Category List</h2>
        </did>
        <div class="col-6 text-right" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Category
                </a>
        </div>

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Category Name </th>

                        <th>Display Order</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.CategoryName</td>
                            <td width="30%">@obj.DisplayOrder</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-area="" asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.CategoryId" class="btn btn-info mx-2"><i class="fas fa-edit"></i></a>
                                    <a asp-area="" asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.CategoryId" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                                </div>


                            </td>
                        </tr>

                    }


                </tbody>

            </table>

        }
        else
        {
            <p>No category Exists!!! please Create </p>
        }

    </div>




</div>